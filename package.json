{
  "name": "birthday_genie",
  "version": "1.0.0",
  "description": "The one stop birtday messaging and reminder app",
  "main": "server.js",
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "start": "cross-env NODE_ENV=production node dist/src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --fix",
    "prepare": "husky",
    "test": "node index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.ts*": [
      "pnpm run lint:fix",
      "pnpm run format:fix",
      "pnpm run test"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.10.0",
    "@swc/cli": "0.4.1-nightly.20240914",
    "@swc/core": "^1.7.26",
    "@tsconfig/node20": "^20.1.4",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
    "@types/source-map-support": "^0.5.10",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.6",
    "prettier": "3.3.3",
    "prettier-eslint": "^16.3.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0"
  },
  "volta": {
    "node": "20.17.0"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "config@latest": "link:eslint/config@latest",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.0",
    "mongoose": "^8.6.3",
    "source-map-support": "^0.5.21",
    "ts-migrate-mongoose": "^3.8.4",
    "winston": "^3.14.2",
    "winston-mongodb": "^5.1.1"
  }
}
