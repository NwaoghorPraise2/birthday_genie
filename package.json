{
    "name": "birthday_genie",
    "version": "1.0.0",
    "description": "The one stop birtday messaging and reminder app",
    "main": "server.js",
    "scripts": {
        "build": "rimraf dist && swc ./src -d dist",
        "start": " NODE_ENV=production node dist/src/server.js",
        "start:prod": "pnpm build && NODE_ENV=production node dist/src/server.js && pnpm docker:db:migrate",
        "start:docker": "pnpm build && nodemon --watch ./src --exec 'node --env-file=.env --inspect=0.0.0.0 dist/src/server.js'",
        "start:docker@prod": "pnpm build && pnpm docker:db:migrate NODE_ENV=production node dist/src/server.js",
        "rebuild:api": "docker compose build api && docker compose rm --force --stop api && docker compose up -d api",
        "db:migrate": "pnpx prisma migrate dev --name init",
        "docker:db:migrate": "docker compose run api pnpm db:migrate",
        "db:console": "docker compose run postgres psql -h postgres -U Admin -d birthday_genie",
        "seed:db:dev": "docker compose run api pnpm ts-node scripts/seed.ts",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --fix",
        "prepare": "husky",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "lint-staged": {
        "*.ts*": [
            "pnpm run format:fix"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@eslint/js": "^9.11.1",
        "@swc/cli": "0.4.1-nightly.20240914",
        "@swc/core": "^1.7.28",
        "@tsconfig/node20": "^20.1.4",
        "@types/bcrypt": "^5.0.2",
        "@types/compression": "^1.7.5",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/eslint__js": "^8.42.3",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.13",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/multer": "^1.4.12",
        "@types/node": "^20.16.10",
        "@types/nodemailer": "^6.4.16",
        "@types/source-map-support": "^0.5.10",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.9.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.7",
        "prettier": "3.3.3",
        "prettier-eslint": "^16.3.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.7.0"
    },
    "volta": {
        "node": "20.17.0"
    },
    "dependencies": {
        "@prisma/client": "^5.21.1",
        "bcrypt": "^5.1.1",
        "cloudinary": "^1.41.3",
        "colorette": "^2.0.20",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "express": "^4.21.0",
        "google-auth-library": "^9.14.2",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "1.4.5-lts.1",
        "multer-storage-cloudinary": "^4.0.0",
        "nanoid": "^5.0.7",
        "nodemailer": "^6.9.15",
        "openai": "^4.71.1",
        "prisma": "^5.21.1",
        "rate-limiter-flexible": "^5.0.3",
        "rimraf": "^6.0.1",
        "source-map-support": "^0.5.21",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "winston": "^3.14.2",
        "zod": "^3.23.8"
    }
}
