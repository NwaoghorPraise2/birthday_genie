{
  "name": "birthday_genie",
  "version": "1.0.0",
  "description": "The one stop birtday messaging and reminder app",
  "main": "server.js",
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "start": "node dist/src/server.js",
    "start:prod": "pnpm build && NODE_ENV=production node dist/src/server.js",
    "start:docker": "pnpm build && nodemon --watch ./src --exec 'node --env-file=.env --inspect=0.0.0.0 dist/src/server.js'",
    "start:docker@prod": "pnpm build && cross-env NODE_ENV=production node dist/src/server.js",
    "rebuild:api": "docker compose build api && docker compose rm --force --stop api && docker compose up -d api",
    "db:migrate": "pnpx prisma migrate dev --name init",
    "docker:db:migrate": "docker compose run api pnpm db:migrate",
    "db:console": "docker compose run postgres psql -h postgres -U Admin -d birthday_genie",
    "seed:db:dev": "docker compose run api pnpm ts-node scripts/seed.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --fix",
    "prepare": "husky",
    "test": "node index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.ts*": [
      "pnpm run format:fix",
      "pnpm run test"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.11.1",
    "@swc/cli": "0.4.1-nightly.20240914",
    "@swc/core": "^1.7.28",
    "@tsconfig/node20": "^20.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.2",
    "@types/source-map-support": "^0.5.10",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0"
  },
  "volta": {
    "node": "20.17.0"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "bcrypt": "^5.1.1",
    "colorette": "^2.0.20",
    "config@latest": "link:eslint/config@latest",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "helmet": "^7.1.0",
    "mongoose": "^8.6.3",
    "nanoid": "^5.0.7",
    "rate-limiter-flexible": "^5.0.3",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "ts-migrate-mongoose": "^3.8.4",
    "winston": "^3.14.2"
  }
}
